extends layout

block content
  #containerDiv
    img.backImage(src="/images/transhuman-peacock-dancer.jpg") 
    #navBar
      a#doneButton(href="/")
        button.leftNavButton Cancel
      p #{character.name}
      redirectRoot = '/character/' + character._id + '/name'
      a#editButton(href=redirectRoot)
        button.rightNavButton Edit
    #contentArea
      ul.displayList
        li
          redirectRoot = '/character/' + character._id + '/homeland'
          a.displayItem(href=redirectRoot)
            div
              p.displayLabel Homeland
              p.displayDesc #{homeland.name + '/' + homeland.world}
        li
          redirectRoot = '/character/' + character._id + '/race'
          a.displayItem(href=redirectRoot)
            div
              p.displayLabel Race
              p.displayDesc Human
        li
          redirectRoot = '/character/' + character._id + '/soma'
          a.displayItem(href=redirectRoot)
            div
              p.displayLabel Soma
              p.displayDesc #{'(' + character.soma.desc + '): ' + character.soma.currentLevel + '/' + character.soma.maxLevel}
        li
          redirectRoot = '/character/' + character._id + '/nous'
          a.displayItem(href=redirectRoot)
            div
              p.displayLabel Nous
              p.displayDesc #{'(' + character.nous.desc + '): ' + character.nous.currentLevel + '/' + character.nous.maxLevel}
        li
          redirectRoot = '/character/' + character._id + '/profession'
          a.displayItem(href=redirectRoot)
            div
              p.displayLabel Profession
              p.displayDesc #{character.profession.name}
        li
          redirectRoot = '/character/' + character._id + '/humanity'
          a.displayItem(href=redirectRoot)
            div
              p.displayLabel Humanity
              p.displayDesc #{character.humanity}
