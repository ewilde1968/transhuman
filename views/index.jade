extends layout

block content
  p Welcome new visitor!
    
  form( action="/login", method="POST")
    fieldset
      legend Log in
      p
        lable Email
        if( signupEmail)
          input( name="user[email]", type="text", value=signupEmail)
        else
          input( name="user[email]", type="text")
      p
        label Password
        input( name="user[password]", type="password")
      p
        button Submit
    p No account?
    a( href="/signup") Signup
