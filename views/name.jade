extends layout

block content
  #containerDiv
    img.backImage(src="/images/transhuman-peacock-dancer.jpg") 
    #navBar
      redirectRoot = '/character/' + character._id
      a(href=redirectRoot)
        button.leftNavButton Done
      p Details
      button.rightNavButton(id="save") Save
    #contentArea
      div.dataEntry
        redirectRoot = '/character/' + character._id + '/name'
        form#nameForm(action=redirectRoot, method="POST")
          fieldset
            p
              div.textInput
                input(name="nameTE", type="text", size="31", required="required", value="#{character.name}")

  script
    $(document).ready( function() {
        $('#save').click( function() {
            $('#nameForm').submit();
        });
    });