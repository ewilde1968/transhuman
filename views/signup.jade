extends layout

block content
  #contentDiv
    img.backImage(src="/images/transhuman-peacock-dancer.jpg") 
    #navBar
      a(href="/")
        button.leftNavButton Cancel
      p Sign Up
    #contentArea
      div.dataEntry
        form( action="/signup", method="POST")
          fieldset
            p
              label First:
              div.textInput
                input( name="user[first]", type="text", required="required")
            p
              label Last:
              div.textInput
                input( name="user[last]", type="text", required="required")
            p
              label Email:
              div.textInput
                input( name="user[email]", type="text", required="required")
            p
              label Password:
              div.textInput
                input( name="user[password]", type="password", size="14", required="required")
            p
              button.rightForm Submit
        