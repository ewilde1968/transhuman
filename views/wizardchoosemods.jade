extends layout

block content
  p
    | Genetic modifications and technological augmentations
    | provide superhuman powers.

    form(action="/wizard/choosemods", method="POST")
      fieldset
        legend Choose Mods
        #humanity
          p #{humanity}
            | Humanity
        #credits
          p #{credits}
            | Credits
        #mainMenu
          each modType in mods
            p #{modType[0].type}
            ul
              each mod in modType
                li: a(href="#") #{mod.name}
        p
          button Next
